<header class="page-header bg-img" style="background-image: url(assets/img/bg-banner1.jpg);">
  <div class="container page-name">
    <h1 class="text-center">Browse resumes</h1>
    <p class="lead text-center">Use following search box to find resumes that fits your position better</p>
  </div>
  <div class="container">
    <%= form_tag '/freelancers', :method => "get", id: "search-form", class: "header-job-search" do %>
      <div class="row">
        <div class="form-group col-xs-12 input-keyword">
          <%= search_field_tag :search, params[:search], placeholder: "Skills, business or field", autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="button-group">
        <div class="action-buttons text-right">
          <%= submit_tag "search", name: nil, id: "search-form", class: "btn btn-primary" %>
          <hr>
          Search available:
          <%= link_to "Available", freelancers_path(availability: "Available"), class: "btn btn-xs btn-primary" %><br /><br />
          Search in your business:
          <%= link_to "My business", freelancers_path(business: current_user.business), class: "btn btn-xs btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</header>
