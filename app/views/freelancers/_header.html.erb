<header class="page-header bg-img" style="background-image: url(assets/img/bg-banner1.jpg);">
  <div class="container page-name">
    <h1 class="text-center">Browse resumes</h1>
    <p class="lead text-center">Use following search box to find resumes that fits your position better</p>
  </div>
  <div class="container">
    <%= form_tag '/freelancers', :method => "get", id: "search-form" do %>
      <div class="row">
        <div class="form-group col-xs-12">
          <%= search_field_tag :search, params[:search], placeholder: "Skills, business or field", autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="button-group">
        <div class="action-buttons">
          <%= submit_tag "search", :name => nil, id: "search-form", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</header>
