<div class="container">
  <% page_header "Your Conversations" %>

  <div class="row">
    <div class="col-sm-12">
      <ul class="">
        <%= mailbox_section 'inbox', @box, class: "btn btn-sm" %>
        <%= mailbox_section 'sent', @box, class: "btn btn-sm" %>
        <%= mailbox_section 'trash', @box, class: "btn btn-sm" %>
        <li class="btn btn-sm"><%= link_to 'Send', new_message_path %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9">
      <% if @box == 'trash' %>
        <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete,
                       data: {confirm: 'Are you sure?'} %></p>
      <% end %>
      <ul class="list-group">
        <%= render partial: 'conversations/conversation', collection: @conversations %>
      </ul>

      <%= will_paginate %>
    </div>
  </div>
</div>
