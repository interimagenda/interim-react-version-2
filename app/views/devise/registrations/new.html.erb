<div class="container">
  <main>
    <div class="login-block">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, class: "form-horizontal", url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <!-- name info -->

          <%= render partial: 'basic_info', locals: {f: f} %>

        <!-- select the type of user -->

            <%= f.label :type %>
            <%= f.select :type, options_for_select(%w[Freelancer Employer]), {}, class: "form-control" %>

        <!-- render either employer or freelancer partial -->

            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
            <%= render "devise/shared/links" %>
      <% end %>
    </div>

  </main>
</div>
