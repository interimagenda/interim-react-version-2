<%= f.label :education %>
<%= f.select :education, options_for_select(%w[LBO MBO HBO Academic]), {}, id: 'education', class: "form-control" %>

<%= f.label :field %>
<%= f.text_field :field, class: "form-control" %>

<%= f.label :availability %>
<%= f.select :availability, options_for_select(%w[Available Unavailable Soon]), {}, class: "form-control", id: 'availability' %>

<%= f.label :pay_rate %><br />
<%= f.number_field :pay_rate, class: "form-control", min: 20 %>

<%= f.label :skills %>
<%= f.text_area :skills, cols: 40, rows: 15, class: "form-control" %>

<%= f.label :traits %>
<%= f.text_area :traits, cols: 40, rows: 15, class: "form-control" %>

<%= f.label :credentials %>
<%= f.text_area :credentials, cols: 40, rows: 15, class: "form-control" %>

<%= f.label :certificates %>
<%= f.text_area :certificates, cols: 40, rows: 15, class: "form-control" %>
