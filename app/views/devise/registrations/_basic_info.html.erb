<%= f.label :first_name %>

<%= f.text_field :first_name, class: "form-control" %>

<%= f.label :last_name %><br />
<%= f.text_field :last_name, class: "devise-field form-control" %>

<%= f.label :email %><br />

<%= f.email_field :email, class: "devise-field form-control" %>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<%= f.label :password %><br />
<%= f.password_field :password, autocomplete: "off", class: "devise-field form-control" %>

<%= f.label :password_confirmation %><br />

<%= f.password_field :password_confirmation, autocomplete: "off", class: "devise-field form-control" %>
