<%= f.label :first_name %>
<%= f.text_field :first_name, class: "form-control" %>

<%= f.label :last_name %><br />
<%= f.text_field :last_name, class: "form-control" %>

<%= f.label :city %>
<%= f.text_field :city, class: "form-control" %>

<%= f.label :country %>
<%= f.text_field :country, class: "form-control" %>

<%= f.label :type %>
<%= f.select :type, options_for_select(%w[Freelancer Employer]), {}, class: "form-control" %>

<%= f.label :business %>
<%= f.select :business, options_for_select(%w[Banking Insurance Engineering IT Finance Legal Marketing Sales Communication
   HR Healthcare Administration Government Construction Industry]), {}, class: "form-control" %>

<%= f.label :email %><br />
<%= f.email_field :email, class: "form-control" %>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<%= f.label :password %><br />
<%= f.password_field :password, autocomplete: "off", class: "form-control" %>

<%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
