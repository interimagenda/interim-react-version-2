<%= form_for @job do |f| %>

  <%= f.label :title %><br />
  <%= f.text_field :title %><br />

  <%= f.label :start_date %><br />
  <%= f.date_field :start_date %><br />

  <%= f.label :job_description %><br />
  <%= f.text_area :job_description %><br />

  <%= f.label :offered_pay_rate %><br />
  <%= f.text_field :offered_pay_rate %><br />

  <%= f.submit (@job.new_record? ? "Create" : "Update") %>

<% end %>
